<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    tools:context="com.bytedance.volc.voddemo.ui.main.MainFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vevod_main_header_bg" />

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_marginTop="44dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/actionBack"
            android:layout_width="44dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/vevod_actionbar_back"
            android:scaleType="centerInside"
            android:layout_height="44dp"
            android:contentDescription="back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="104dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:textSize="24sp"
            android:textColor="#111214"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/vod_solutions"
            android:textColor="#111214"
            android:textSize="16sp"
            android:lineSpacingExtra="2sp"
            android:alpha="0.8" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:itemCount="3"
        tools:listitem="@layout/main_fragment_item"
        android:layout_marginTop="196dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>