<com.bytedance.playerkit.player.playback.widgets.RatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/vevod_mini_drma_episode_select_dialog_item_bg_selector"
    app:ratio="1"
    app:ratioMode="width">

    <TextView
        android:id="@+id/indexView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/vevod_mini_drama_episode_select_dialog_item_number_color"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="1" />

    <ImageView
        android:id="@+id/playingView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="6dp"
        android:src="@drawable/vevod_mini_drama_episode_select_dialog_item_playing_ic" />


    <ImageView
        android:id="@+id/lockView"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="right|top"
        android:src="@drawable/vevod_mini_drama_episode_select_dialog_item_locked" />

</com.bytedance.playerkit.player.playback.widgets.RatioFrameLayout>