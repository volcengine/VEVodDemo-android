<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bytedance.volc.voddemo.impl">

    <!-- Picture in Picture Mode Permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application>
        <activity
            android:name="com.bytedance.volc.voddemo.ui.minidrama.scene.detail.DramaDetailVideoActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/VEVodAppTheme" />
        <activity
            android:name="com.bytedance.volc.voddemo.ui.minidrama.scene.main.DramaMainActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/VEVodAppTheme" />
        <activity
            android:name="com.bytedance.volc.voddemo.ui.main.MainActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/VEVodAppTheme" />
        <activity
            android:name="com.bytedance.volc.voddemo.ui.video.scene.VideoActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/VEVodAppTheme" />
        <activity
            android:name="com.bytedance.volc.voddemo.ui.settings.SettingsActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
            android:screenOrientation="portrait"
            android:theme="@style/VEVodAppTheme" />
        <activity
            android:name="com.bytedance.volc.voddemo.ui.sample.SampleVideoActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation|keyboard"
