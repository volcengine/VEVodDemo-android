<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/collectContainer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/feed_video_item_footer_ic_collect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="139"
                android:textColor="#0C0D0F"
                android:textSize="12sp" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/commentContainer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/feed_video_item_footer_ic_comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="456"
                android:textColor="#0C0D0F"
                android:textSize="12sp" />

        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/likeContainer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/feed_video_item_footer_ic_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="226"
                android:textColor="#0C0D0F"
                android:textSize="12sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>